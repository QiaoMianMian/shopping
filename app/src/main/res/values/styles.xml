<resources>

    <style name="AppTheme" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen" />

    <style name="BaseTextStyle">
        <item name="android:textColor">@color/base_text_color</item>
    </style>

    <style name="BaseTestStyle">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">@color/base_txt_textColor</item>
    </style>

    <style name="LoginTextStyle" parent="@style/BaseTestStyle" />

    <style name="EnteryLoginButtonTextStyle" parent="@style/BaseTextStyle">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#ff666666</item>
        <item name="android:paddingRight">3.0dip</item>
        <item name="android:paddingBottom">3.0dip</item>
    </style>

    <style name="ListBackgroundStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/widget_list_total_margin</item>
        <item name="android:layout_marginRight">@dimen/widget_list_total_margin</item>
        <item name="android:minHeight">@dimen/widget_list_minHeight</item>
    </style>

    <style name="LoginEditTextStyle">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/base_edit_textColor</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ListBackgroundDownStyle" parent="@style/ListBackgroundStyle">
        <item name="android:background">@drawable/background_list_down_selector</item>
    </style>

    <style name="ListBackgroundDownNoPressedStyle" parent="@style/ListBackgroundDownStyle">
        <item name="android:background">@mipmap/background_list_down_normal</item>
    </style>

    <style name="ListBackgroundUpStyle" parent="@style/ListBackgroundStyle">
        <item name="android:background">@drawable/background_list_up_selector</item>
        <item name="android:layout_marginLeft">@dimen/widget_list_total_margin</item>
        <item name="android:layout_marginRight">@dimen/widget_list_total_margin</item>
    </style>

    <style name="ListBackgroundUpNoPressedStyle" parent="@style/ListBackgroundUpStyle">
        <item name="android:background">@mipmap/background_list_up_normal</item>
    </style>

    <style name="CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/base_txt_textColor</item>
        <item name="android:paddingLeft">20.0dip</item>
        <item name="android:button">@drawable/checkbox_selector</item>
    </style>


    <style name="StyledIndicators" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget">
        <item name="android:textColor">@drawable/text_color_selector</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MeTextBaseStyle">
        <item name="android:textColor">#ff595c45</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">3.0dip</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MeNickNameTextStyle" parent="@style/MeTextBaseStyle">
        <item name="android:textSize">20.0sp</item>
    </style>

    <style name="MeUserInfoTextStyle" parent="@style/MeTextBaseStyle">
        <item name="android:textSize">13.0sp</item>
        <item name="android:drawableLeft">@mipmap/me_line</item>
        <item name="android:drawablePadding">4.0dip</item>
    </style>

    <style name="ListBackgroundRightAngleNoFullStyle" parent="@style/ListBackgroundUpStyle">
        <item name="android:background">@drawable/background_list_right_angle_no_full_selector
        </item>
        <item name="android:layout_marginLeft">0.0dip</item>
        <item name="android:layout_marginRight">0.0dip</item>
        <item name="android:minHeight">@dimen/widget_list_right_angle_minHeight</item>
    </style>

    <style name="UserProfileEditItemTextStyle">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">#ff575454</item>
    </style>

    <style name="ToastTextStyle" parent="@style/BaseTextStyle">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="DialogText">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#fff3f3f3</item>
        <item name="android:paddingLeft">8.0dip</item>
        <item name="android:paddingTop">5.0dip</item>
        <item name="android:paddingRight">8.0dip</item>
        <item name="android:paddingBottom">5.0dip</item>
    </style>

    <style name="DialogText.Message" parent="@style/DialogText">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:padding">32.0dip</item>
    </style>

    <style name="DialogText.Title" parent="@style/DialogText">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/base_bg_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:paddingRight">15.0dip</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="DialogText.ButtonText" parent="@style/DialogText">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff666666</item>
        <item name="android:background">@drawable/dialog_button_bg_selector</item>
        <item name="android:padding">0.0dip</item>
        <item name="android:minHeight">43dip</item>
    </style>

    <style name="Label">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFEFF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
    </style>

    <style name="MyDialogStyle" parent="@android:style/Theme.Holo.Light.Dialog.MinWidth">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>
